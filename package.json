{
    "name": "@bonapata/partes",
    "version": "0.2.9",
    "description": "Una librería libre de componentes para React, escrita en Typescript.",
    "main": "dist/umd/index.js",
    "browser": "dist/bundle.js",
    "module": "dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "devDependencies": {
        "@babel/core": "^7.18.6",
        "@babel/preset-env": "^7.18.6",
        "@babel/preset-react": "^7.18.6",
        "@cypress/react": "^6.0.0",
        "@types/jest": "^28.1.4",
        "@types/node": "^18.0.1",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "babel-loader": "^8.2.5",
        "browserify": "^17.0.0",
        "cypress": "^10.3.0",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-react": "^7.30.1",
        "esmify": "^2.1.1",
        "prettier": "^2.7.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "ts-jest": "^28.0.5",
        "typescript": "^4.7.4",
        "webpack": "^5.73.0"
    },
    "peerDependencies": {
        "react": "^16.9.0 || ^17.0.0 || ^18",
        "react-dom": "^16.9.0 || ^17.0.0 || ^18"
    },
    "scripts": {
        "add-hooks": "scripts/add-hooks.sh",
        "lint": "eslint ./",
        "lint:fix": "eslint --fix ./",
        "prebuild": "npm run lint",
        "build": "rm -rf dist/ && npm run build:esm && npm run build:umd && npm run build:browser",
        "build:esm": "tsc",
        "build:umd": "tsc --module commonjs --outDir dist/cjs",
        "build:browser": "browserify -p esmify dist/cjs/**/**.js --s partes -o dist/bundle.js",
        "pretest": "npm run build",
        "test": "cypress run --component",
        "pretest:open": "npm run build",
        "test:open": "cypress open --component --browser chrome"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/juanmanuelgg/bonapata-partes.git"
    },
    "keywords": [
        "React",
        "components",
        "library",
        "libre"
    ],
    "author": "Juan Manuel González Garzón",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/juanmanuelgg/bonapata-partes/issues"
    },
    "homepage": "https://github.com/juanmanuelgg/bonapata-partes#readme"
}
